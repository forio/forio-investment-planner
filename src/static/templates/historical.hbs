<div class="col-xs-12">
    <div class="row">
        <div class="col-xs-11 col-xs-offset-1">
            <h4>Historical Data</h4>
        </div>
    </div>
</div>
<div class="col-xs-12">
    <div class="row historical-chart-holder">
        <table class="table">
            <thead>
                <tr class="names-head">
                    <td class="headcol"></td>
                    {{#each historicalData}}
                        <td class="toprow">{{name}}</td>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>History</th>
                    {{#each historicalData}}
                        <td>
                            <div 
                                class="history-bar" data-name="{{name}}">
                            </div>
                        </td>
                    {{/each}}
                </tr>
                <tr>
                    <th>Average</th>
                    {{#each historicalData}}
                        <td class="number">
                            {{formatPercent average}}
                        </td>
                    {{/each}}
                </tr>

                {{#each historicalData}}
                    <tr>
                        <th>{{name}}</th>
                        {{historyCorrelation this  ../correlation}}
                    </tr>
                {{/each}}
                
            </tbody>
        </table>
    </div>
</div>